{
  "name": "remix-template-cloudflare-workers",
  "private": true,
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:remix": "remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/generated.css",
    "deploy": "npm run build && wrangler publish",
    "dev:remix": "cross-env REMIX_DEV_SERVER_WS_PORT=8002 remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/generated.css --watch",
    "dev": "run-p dev:*",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.5.1",
    "@remix-run/cloudflare-workers": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.11.0",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/node": "^17.0.36",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "miniflare": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4",
    "wrangler": "^2.0.7"
  },
  "resolutions": {
    "miniflare": "^2.4.0"
  },
  "engines": {
    "node": ">=14"
  }
}
